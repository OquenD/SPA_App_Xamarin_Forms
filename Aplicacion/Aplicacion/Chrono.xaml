<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicacion.Chrono">
    <StackLayout VerticalOptions="Center">
        <Label x:Name="labelLimit"
               Text="Time in Seconds: "
               TextColor="Black"
               HorizontalOptions="CenterAndExpand" />
        <Stepper x:Name="stepperSeconds"
                 Minimum="1"
                 Maximum="300"
                 Increment="1"
                 Value="0"
                 ValueChanged="stepperSeconds_ValueChanged"
                 HorizontalOptions="CenterAndExpand" />
        <Label x:Name="labelSeconds"
               Text="0:00" 
               TextColor="Black"
               FontSize="86"
               HorizontalOptions="CenterAndExpand" />
        <Button x:Name="buttonActivate"
                Text="Activate"
                Clicked="buttonActivate_Clicked"
                HorizontalOptions="CenterAndExpand"
                Font="24"
                Margin="24" />
    </StackLayout>
</ContentPage>